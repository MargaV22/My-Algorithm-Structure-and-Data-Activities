import java.util.Scanner;
import java.util.Arrays;

public class BinarySearchUserInput {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Ask the user for the size of the array
        System.out.print("Enter the number of elements in the array: ");
        int box = scanner.nextInt();

        // Create an array of the specified size
        int[] num = new int[box];

        // Ask the user to input the elements of the array (must be sorted for binary search)
        System.out.println("Enter the elements of the array in order:");
        for (int s = 0; s < box; s++) {
            System.out.print("Element " + (s+1) + ": ");
            num[s] = scanner.nextInt();
        }

        // Ask the user for the target value
        System.out.print("Enter the value to search for: ");
        int select = scanner.nextInt();

        // Binary search variables
        int low = 0;
        int high = num.length - 1;
        boolean found = false;

        // Binary search using a loop
        while (low <= high) {
            int mid = (low + high) / 2;

            if (num[mid] == select) {
                System.out.println("Target " + select + " found at index " + mid);
                found = true;
                break;
            } else if (num[mid] < select) {
                low = mid + 1; // Search the right half
            } else {
                high = mid - 1; // Search the left half
            }
        }

        // If the target was not found
        if (!found) {
            System.out.println("Target " + select + " not found in the array.");
        }

        scanner.close();
    }

